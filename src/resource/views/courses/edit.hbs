<div class="mt-4">

    <h3>Edit Course</h3>

    <form class="mt-4" method="post" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="description">Name</label>
            <input type="text" id="name" class="form-control" value="{{course.name}}" name="name">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" class="form-control" value=""
                name="description">{{course.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId">Video ID</label>
            <input type="text" id="videoId" class="form-control" value="{{course.videoId}}" name="videoId">
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>

</div>